<main class="p-10 min-h-screen bg-cover" style="background-image: url(/assets/home.jpg);">
  <section class="search">
    <h1 class="text-4xl text-white text-center p-4">Search for a Game</h1>
    <div class="text-center">
      <input type="text" placeholder="Type here" id="search-input "class="input input-bordered w-full max-w-xs" />
    </div>
        <div class="flex justify-center card-actions m-2">
          <button class="btn btn-primary" id="search-button">Search</button>
        </div>
  </section>


  <h1 class="text-4xl text-white text-center p-4">Popular Games</h1>
  <section class="games flex flex-wrap justify-evenly">
    
    {{#each games}}
    <div class="card game card-side bg-base-100 shadow-xl w-1/4 m-5">
      <figure><img src="{{cover}}" alt="{{name}} cover image"/></figure>
      <div class="card-body">
        <h2 class="card-title">{{name}}</h2>
        <div class="rating rating-xs">
          <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
          <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" checked />
          <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
          <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
          <input type="radio" name="rating-5" class="mask mask-star-2 bg-orange-400" />
        </div>
        <p>{{description}}</p>
        <div class="card-actions justify-end">
          <button class="btn btn-primary">View</button>
        </div>
      </div>
    </div>
    {{/each}}

<script src="/js/homepage.js"></script>

</main>