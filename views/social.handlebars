<main class="p-10 min-h-screen bg-cover" style="background-image: url(/assets/social2.jpg);">
    <div class="flex flex-wrap justify-evenly p-10"> 
        <section id="friend-list" class="glass card w-1/3 bg-base-100 shadow-xl">
            <div class="card-body">
            <h2 class="card-title text-white text-3xl pb-5">Friends List</h2>
            {{#if friends.length}}
                {{#each friends}}
                    <p class="text-white text-2xl">{{this.name}}</p> 
                {{/each}}
            {{else}}
                <p class="text-white">No friends added yet.</p>
            {{/if}}
            </div>
        </section>
        <section id="add-friend" class="glass card w-1/3 bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title text-white text-3xl">Add Friend</h2>
                <label class="input input-bordered flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" /></svg>
                    <input type="text" id="friend-input" class="grow" placeholder="Username" />
                </label>
                <div class="card-actions justify-end">
                    <button class="btn btn-primary" id="add-friend-btn">Add Friend</button>
                </div>
            </div>
        </section>
        {{#if friendsReviews}}
            <section class="glass review-section hero p-10 bg-base-200 rounded-3xl my-5">
            <div>
            <h1 class="text-3xl text-center text-white font-bold">Friends Reviews:</h1>
            <div class="flex flex-wrap justify-evenly lg:flex-row wrap">
                {{#each friendsReviews}}
                    <div class="friend-reviews card w-96 m-5 bg-base-100 shadow-xl">
                        <div class="card-body">
                            <div class="card-title flex justify-between">
                                <h2>{{this.gameName}}</h2>
                            </div>
                            <div class="rating rating-xs">
                                <!-- rating -->
                            </div>
                            <p>{{this.description}}</p>
                            <p>By: {{this.friendName}}</p>
                        </div>
                    </div>
            {{/each}}
            </div>
        </section>
        {{/if}}
    </div> 
</main>

<script src="/js/social.js"></script>
